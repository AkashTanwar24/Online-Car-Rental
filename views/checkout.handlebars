<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <div class="card" style="width: 18rem;">
        <img src="{{car.picture}}" class="card-img-top" alt="..." />
        <div class="card-body">
          <h5 class="card-title">{{car.make}} {{car.modal}}</h5>
          <p class="card-text">{{car.pricePerWeek}}/week</p>
          <p class="card-text">{{car.pricePerHour}}/hour</p>
          <a href="/displayCar/{{car._id}}" class="btn btn-primary">Contact
            Owner</a>
        </div>
      </div>
    </div>
    <div class="col-sm-4">
      <form action="/chargeRenter/{{budjet._id}}" method="POST">
        <script
          src="https://checkout.stripe.com/checkout.js"
          data-key="{{StripePublishableKey}}"
          class="stripe-button"
          data-amount="{{stripeTotal}}"
          data-name="Car Rental"
          data-description="${{budjet.total}} for renting a {{car.make}} {{car.modal}}"
          data-image="/image/logo.png"
        >

        </script>
        <div class="form-group">
          <label for="hour">Total is {{budjet.total}}</label>

          <div class="form-group">

          </div>
        </div>
      </form>
    </div>
  </div>
</div>